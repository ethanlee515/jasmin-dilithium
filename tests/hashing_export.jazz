require "../src/hashing.jazz"

export
fn sampleInBall_jazz(reg u64 ptr_f, reg u64 ptr_seed) {
	stack u32[Li2_polydeg] f;
	stack u8[32] seed;
	reg u8 c;
	reg u32 v;

	inline int i;

	for i = 0 to 32 {
		c = (u8)[ptr_seed + i];
		seed[i] = c;
	}

	f = sampleInBall(f, seed);
	
	for i = 0 to Li2_polydeg {
		v = f[i];
		(u32)[ptr_f + 4 * i] = v;
	}
}
