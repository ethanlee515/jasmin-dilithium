inline
fn pointwise_mont_mult(reg ptr u32[Li2_l * Li2_polydeg] f g fg)
	-> reg ptr u32[Li2_l * Li2_polydeg]
{
	reg u64 i;
	reg u32 v;
	stack u32 fv gv fgv;
	i = 0;
	while(i < Li2_l * Li2_polydeg) {
		v = f[(int) i];
		fv = v;
		v = g[(int) i];
		gv = v;
		fgv = montgomery_mult(fv, gv);
		v = fgv;
		fg[(int) i] = v;
		i += 1;
	}
	return fg;
}

