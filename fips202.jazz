//Maybe should allow squeezing partial blocks
//for performance?
inline
fn shake256_squeezeblock(stack u64[25] state, stack u8[SHAKE256_RATE] out)
	-> stack u64[25], stack u8[SHAKE256_RATE]
{
  reg u8 c;
  reg u64 i;

  state = __keccakf1600_ref(state);

	i = 0;
	while(i < SHAKE256_RATE) {
		c = state[u8 (int) i];
		out[(int) i] = c;
		i += 1;
	}

  return state, out;
}
